@using System.Globalization;
@model Product

<form method="post">
	<div class="card shadow border-0 mt-4">
		<div class="card-header bg-primary bg-gradient text-light py-4 border-0">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-white text-uppercase">@Model.Title</h3>
					<p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="py-3">
				<div class="row">
					<div class="col-6 col-md-2 offset-lg-1 pb-1">
						<a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
							<small>Back to home</small>
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
						<img src="@Model.ImageUrl" @*src="https://placehold.co/500x600/555555/FFF"*@ style="width: 100%" class="rounded" />
					</div>
					<div class="col-12 col-lg-6 offset-lg-1">

						<div class="col-12 col-md-6 pb-4">
							<span class="badge rounded-pill text-bg-warning">@Model.Category.Name</span>
						</div>
						<div class="row ps-2">
							<h6 class="text-secondary">ISBN : @Model.ISBN</h6>
						</div>
						<div class="row ps-2">
							<h6 class="text-secondary pb-2">
								List Price:
								<span class="text-decoration-line-through">
									@Model.ListPrice.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
								</span>
							</h6>
						</div>
						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
								<div class="text-success fw-semibold">Quantity</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
								<div class="text-light fw-semibold">1-50</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
								<div class="text-light fw-semibold">51-100</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark border-bottom">
								<div class="text-light fw-semibold">100+</div>
							</div>
						</div>
						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 bg-dark text-success fw-bold">
								<div>Price</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark text-light fw-bold">
								<div>@Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark text-light fw-bold">
								<div>@Model.PriceFifty.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</div>
							</div>
							<div class="p-1 col-3 col-lg-2 bg-dark text-light fw-bold">
								<div>@Model.PriceHundredOrMore.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))</div>
							</div>
						</div>
						<div class="row pl-2 my-3">
							<p class="text-secondary lh-sm">@Model.Description</p>
						</div>
						<div class="row pl-2 mb-3">
							<div class="col-md-4">
								<div class="input-group mb-3">
									<span class="input-group-text bg-primary text-white border-0 fw-semibold"
										  id="inputGroup-sizing-default">
										Count
									</span>
									<input type="number" value="1" class="form-control text-end"
										   aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-md-6 pb-1">
								<button type="submit" disabled
										class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
									Add to Cart (Coming Soon...)
								</button>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</form>
