@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-primary border-5 rounded">
                        @if (product.ProductImages is not null && product.ProductImages.Any())
                        {
                            <img asp-append-version="true" src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/212529/white/png?text=No\nImages&font=roboto" class="card-img-top rounded" />
                        }
                        @* <img src="@product.ImageUrl" class="card-img-top rounded" /> *@
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-light opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-light opacity-25 text-center mb-0">
                                    List price:
                                    <span class="text-decoration-line-through">
                                        @product.ListPrice.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-light opacity-25 text-center">
                                    As low as:
                                    <span>
                                        @product.PriceHundredOrMore.ToString("c", CultureInfo.CreateSpecificCulture("en-US"))
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient form-control">
                                <i class="bi bi-arrow-return-right"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>