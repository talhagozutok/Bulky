@model List<Company>

<div class="card shadow border-top-0 mt-4">
	<div class="card-header bg-primary bg-gradient bg-opacity-75 m-lg-0 py-3 border-0 rounded-2 rounded-bottom-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Company List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="container">
			<div class="row mb-3">
				<div class="text-end">
					<a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
						<i class="bi bi-plus"></i> Create
					</a>
				</div>
			</div>
			<partial name="_CompanyTable" />
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/js/company.js"></script>
}