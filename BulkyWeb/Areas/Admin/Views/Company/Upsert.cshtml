@model Company

@{
	if (Model is not null)
	{
		ViewBag.CurrentProcess = (Model.Id == 0 ? "Create" : "Update");
	}
}

<div class="card shadow border-top-0 mt-4">
	<div class="card-header bg-primary bg-gradient bg-opacity-75 m-lg-0 py-3 border-0 rounded-2 rounded-bottom-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">@ViewBag.CurrentProcess Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="form-floating mb-3">
					<input asp-for="Name" class="form-control">
					<label asp-for="Name"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="City" class="form-control">
					<label asp-for="City"></label>
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="State" class="form-control">
					<label asp-for="State"></label>
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="StreetAddress" class="form-control">
					<label asp-for="StreetAddress"></label>
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="PostalCode" class="form-control">
					<label asp-for="PostalCode"></label>
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="PhoneNumber" class="form-control">
					<label asp-for="PhoneNumber"></label>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">
							<i class="bi bi-arrow-left"></i> Back to List
						</a>
					</div>
					@{
						if (ViewBag.CurrentProcess.Equals("Create"))
						{
							<div class="col-6">
								<button type="submit" class="btn btn-primary form-control">
									<i class="bi bi-plus-circle"></i> Create
								</button>
							</div>
						}
						else
						{
							<div class="col-6">
								<button type="submit" class="btn btn-primary form-control">
									<i class="bi bi-pencil-square"></i> Update
								</button>
							</div>
						}
					}
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
