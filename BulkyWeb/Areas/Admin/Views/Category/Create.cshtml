@model Category

<div class="card shadow border-top-0 mt-4">
	<div class="card-header bg-primary bg-gradient bg-opacity-75 m-lg-0 py-3 border-0 rounded-2 rounded-bottom-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Create Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="form-floating mb-3">
					<input asp-for="Name" class="form-control">
					<label asp-for="Name"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="DisplayOrder" min="0" class="form-control">
					<label asp-for="DisplayOrder"></label>
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
							<i class="bi bi-arrow-left"></i> Back to List
						</a>
					</div>
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">
							<i class="bi bi-plus-circle"></i> Create
						</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
