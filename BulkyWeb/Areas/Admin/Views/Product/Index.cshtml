@model List<Product>

<div class="card shadow border-top-0 mt-4">
	<div class="card-header bg-primary bg-gradient bg-opacity-75 m-lg-0 py-3 border-0 rounded-2 rounded-bottom-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="container">
			<div class="row">
				<div class="text-end">
					<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
						<i class="bi bi-plus"></i> Create
					</a>
				</div>
			</div>
			@if (Model.Count > 0)
			{
				<partial name="_ProductTable" />
					<thead>
						<tr>
							<th>Title</th>
							<th>ISBN</th>
							<th>Author</th>
							<th>Category</th>
							<th>List Price</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var product in Model)
						{
							<tr>
								<td>@product.Title</td>
								<td>@product.ISBN</td>
								<td>@product.Author</td>
								<td>Add category name here</td>
								<td>@product.ListPrice.ToString("c")</td>
								<td>
									<div class="w-75" role="group">
										<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-primary">
											<i class="bi bi-pencil-square"></i> Edit
										</a>
										<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger" onclick="deleteObject(event, '@product.Title')">
											<i class="bi bi-trash-fill"></i> Delete
										</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			}
			else
			{
				<p>There aren't any product in the database.</p>
			}
		</div>
	</div>
</div>

@section Scripts{
	<script>
		function deleteObject(e, productName) {
			// preventing default event which is redirect for anchor tag.
			e.preventDefault();

			// do my commands
			DeleteAlert.fire({
				title: 'Are you sure?',
				html: `The product '<strong>${productName}</strong>' will be deleted.`
			}).then((result) => {
				if (result.isConfirmed) {
					// then redirect
					window.location.href = e.target.href;
				}
			})
		}
	</script>
}
