@model Product

<div class="card shadow border-top-0 mt-4">
	<div class="card-header bg-primary bg-gradient bg-opacity-75 m-lg-0 py-3 border-0 rounded-2 rounded-bottom-0">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white">Update Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row">
			<input asp-for="Id" type="hidden" />
			<div class="p-3">
				<div asp-validation-summary="ModelOnly"></div>
				<div class="form-floating mb-3">
					<input asp-for="Title" class="form-control">
					<label asp-for="Title"></label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<textarea asp-for="Description" class="form-control"></textarea>
					<label asp-for="Description"></label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="ISBN" class="form-control">
					<label asp-for="ISBN"></label>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Author" class="form-control">
					<label asp-for="Author"></label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="ListPrice" min="0" class="form-control">
					<label asp-for="ListPrice"></label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="PriceFifty" min="0" class="form-control">
					<label asp-for="PriceFifty"></label>
					<span asp-validation-for="PriceFifty" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="PriceHundredOrMore" min="0" class="form-control">
					<label asp-for="PriceHundredOrMore"></label>
					<span asp-validation-for="PriceHundredOrMore" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
							<i class="bi bi-arrow-left"></i> Back to List
						</a>
					</div>
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">
							<i class="bi bi-pencil-fill"></i> Update
						</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}