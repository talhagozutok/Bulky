<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>
		@(
			ViewData["Title"]
			?? ViewContext.RouteData.Values["action"]
			?? ViewContext.RouteData.Values["controller"]
			?? "Empty title"
			)
	</title>
	<link rel="stylesheet" asp-append-version="true" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" asp-append-version="true" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="stylesheet" asp-append-version="true" href="~/lib/sweetalert2/sweetalert2.min.css" />
	<link rel="stylesheet" asp-append-version="true" href="~/lib/animate.css/animate.min.css" />
	<link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
	<link rel="stylesheet" asp-append-version="true" href="~/BulkyStoreWeb.styles.css" />
</head>
<body>
	<header>
		<partial name="_Navbar" />
	</header>
	<div class="container my-3">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer class="footer border-top text-muted">
		<partial name="_Footer" />
	</footer>
	<script asp-append-version="true" src="~/lib/jquery/jquery.min.js"></script>
	<script asp-append-version="true" src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script asp-append-version="true" src="~/lib/sweetalert2/sweetalert2.min.js"></script>
	<script asp-append-version="true" src="~/js/site.js"></script>
	<partial name="_Notification" />
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
