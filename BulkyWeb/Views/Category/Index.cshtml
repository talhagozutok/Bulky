@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus"></i>  Create
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
				<th>Operations</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@category.Name</td>
					<td>
						@category.DisplayOrder
					</td>
					<td>
						<div class="w-75" role="group">
							<form id="myForm" method="get" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn-group" onsubmit="sendForm(event, '@category.Name')">
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<button type="submit" class="btn btn-outline-danger">
									<i class="bi bi-trash-fill"></i> Delete
								</button>
							</form>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts{
	<script>
		function sendForm(e, categoryName){
			e.preventDefault();

			DeleteAlert.fire({
				title: 'Are you sure?',
				html: `The category '<strong>${categoryName}</strong>' will be deleted.`
			}).then((result) => {
				if(result.isConfirmed){
					const myForm = document.getElementById('myForm');
					myForm.submit();
				}
			})
		}
	</script>
}
